<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContemporaryNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorControlNormal">@color/col_primary_text</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/col_content</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="FragInfoMessage">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/col_primary_text</item>
        <item name="android:textSize">@dimen/frag_creating_note_primary_text_size</item>
    </style>

    <style name="NoteTitle">
        <item name="android:textColor">@color/col_primary_text</item>
        <item name="android:textSize">@dimen/frag_creating_note_primary_text_size</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="NoteDescription">
        <item name="android:textColor">@color/col_secondary_text</item>
        <item name="android:textSize">@dimen/frag_creating_note_secondary_text_size</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
</resources>