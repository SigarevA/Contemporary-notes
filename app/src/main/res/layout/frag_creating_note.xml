<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.creatingNote.CreatingNoteFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/frag_creating_note_padding_bottom">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/creating_note_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_creating_note_toolbar"
                android:elevation="@dimen/frag_info_toolbar_elevation"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/creating_note_menu" />

            <EditText
                android:id="@+id/title_note_et"
                style="@style/NoteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/frag_creating_note_horizontal_margin_et"
                android:layout_marginTop="@dimen/frag_creating_note_primary_top_margin"
                android:background="@null"
                android:hint="@string/creating_note_title"
                android:singleLine="true"
                android:textColorHint="@color/col_secondary_text"
                app:layout_constraintTop_toBottomOf="@id/creating_note_toolbar" />

            <EditText
                android:id="@+id/description_note_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/frag_creating_note_horizontal_margin_et"
                android:layout_marginTop="@dimen/frag_creating_note_secondary_top_margin"
                android:background="@null"
                android:fontFamily="@font/inter_regular"
                android:hint="@string/creating_note_description"
                android:textColor="@color/col_primary_text"
                android:textColorHint="@color/col_secondary_text"
                android:textSize="@dimen/frag_creating_note_secondary_text_size"
                app:layout_constraintTop_toBottomOf="@id/title_note_et" />

            <View
                android:id="@+id/reminder_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/frag_creating_note_card_margin_horizontal"
                android:layout_marginTop="@dimen/frag_creating_note_card_margin_top"
                android:layout_marginBottom="@dimen/test"
                android:background="@drawable/bg_reminder_container"
                android:elevation="@dimen/frag_creating_note_card_elevation"
                app:layout_constraintBottom_toBottomOf="@id/time_preview"
                app:layout_constraintTop_toBottomOf="@id/description_note_et" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/reminder_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/frag_creating_note_flag_margin_horizontal"
                android:layout_marginTop="@dimen/frag_creating_note_flag_margin_top"
                android:checked="true"
                android:elevation="@dimen/frag_creating_note_card_elevation"
                android:text="@string/frag_creating_reminder"
                android:textColor="@color/col_primary_text"
                android:textSize="@dimen/frag_creating_note_secondary_text_size"
                app:layout_constraintTop_toTopOf="@id/reminder_container" />

            <TextView
                android:id="@+id/date_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/frag_creating_note_reminder_margin_horizontal"
                android:elevation="@dimen/frag_creating_note_card_elevation"
                android:text="@string/frag_creating_note_date"
                app:layout_constraintEnd_toStartOf="@id/time_label"
                app:layout_constraintStart_toStartOf="@id/reminder_container"
                app:layout_constraintTop_toBottomOf="@id/reminder_switch" />

            <TextView
                android:id="@+id/time_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/frag_creating_note_reminder_margin_horizontal"
                android:elevation="@dimen/frag_creating_note_card_elevation"
                android:text="@string/frag_creating_note_time"
                app:layout_constraintBaseline_toBaselineOf="@id/date_label"
                app:layout_constraintEnd_toEndOf="@id/reminder_container"
                app:layout_constraintStart_toEndOf="@id/date_label"
                app:layout_constraintTop_toBottomOf="@id/reminder_switch" />

            <TextView
                android:id="@+id/date_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/frag_creating_note_date_preview_margin"
                android:background="@drawable/bg_reminder_container"
                android:elevation="@dimen/frag_creating_note_date_preview_elevation"
                android:padding="@dimen/frag_creating_note_date_preview_padding"
                app:drawableEndCompat="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="@id/date_label"
                app:layout_constraintStart_toStartOf="@id/date_label"
                app:layout_constraintTop_toBottomOf="@id/time_label" />

            <TextView
                android:id="@+id/time_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/frag_creating_note_date_preview_margin"
                android:layout_marginBottom="@dimen/frag_creating_note_date_preview_marginBottom"
                android:background="@drawable/bg_reminder_container"
                android:elevation="@dimen/frag_creating_note_date_preview_elevation"
                android:padding="@dimen/frag_creating_note_date_preview_padding"
                app:drawableEndCompat="@drawable/ic_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/time_label"
                app:layout_constraintStart_toStartOf="@id/time_label"
                app:layout_constraintTop_toBottomOf="@id/time_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        app:fabCradleMargin="@dimen/fab_margin"
        app:hideOnScroll="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:tint="@color/col_secondary_text"
        app:layout_anchor="@id/bottom_app_bar"
        app:srcCompat="@drawable/ic_done" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>